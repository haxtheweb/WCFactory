{
  "name": "<%= orgNpm %>/<%= name %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "wcfactory": {
    "askSASS": true,
    "askProps": true,
    "askHAX": true,
    "monorepo": "<%= name %>",
    "orgNpm": "<%= orgNpm %>",
    "orgGit": "<%= orgGit %>",
    "gitRepo": "<%= gitRepo %>",
    "sass": {
      "name": "rh-sass",
      "pkg": "@rhelements/rh-sass",
      "path": "rh-sass/rh-sass"
    }
  },
  "author": {
    "name": "<%= orgGit %>",
    "url": ""
  },
  "license": "Apache-2.0",
  "repository": "<%= gitRepo %>",
  "scripts": {
    "start": "bash scripts/preinstall.sh && yarn run storybook",
    "lerna": "lerna",
    "preinstall": "bash scripts/preinstall.sh",
    "postinstall": "bash scripts/postinstall.sh",
    "init": "lerna init",
    "test": "yarn run build && wct --configFile wct.conf.json test/index.html",
    "build": "lerna run build --no-bail",
    "publish": "echo 'NOTICE: You must run `lerna publish` manually'",
    "test-suite-inject": "node scripts/test-suite-inject.js",
    "storybook": "start-storybook -c .storybook -p 9001 -s ./elements",
    "build-storybook": "build-storybook -c .storybook -o ../../storybooks/lrnwebcomponents",
    "rebuild-wcfcache": "./node_modules/.bin/gulp --gulpfile=gulpfile.cjs",
    "new": "yarn run rebuild-wcfcache && wcf element && yarn run test-suite-inject && yarn install --link-duplicates"
  },
  "devDependencies": {
    "@storybook/addon-knobs": "4.1.18",
    "@open-wc/webpack": "0.1.6",
    "@open-wc/storybook": "0.2.8",
    "@emotion/core": "0.13.1",
    "@emotion/styled": "0.10.6",
    "@webcomponents/webcomponentsjs": "2.5.0",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-custom-element-classes": "0.1.0",
    "babel-plugin-transform-es2015-modules-umd": "6.24.1",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.26.14",
    "chalk": "4.1.0",
    "css-scss": "0.1.1",
    "decomment": "0.9.3",
    "del": "5.1.0",
    "dialog-polyfill": "0.5.6",
    "global": "4.4.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "8.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-concat-util": "0.5.5",
    "gulp-copy": "4.0.1",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "gulp-sass": "4.1.0",
    "gulp-sequence": "1.0.0",
    "gulp-shell": "0.8.0",
    "gulp-strip-css-comments": "2.0.0",
    "gulp-svg-sprite": "1.5.0",
    "gulp-trim": "1.0.2",
    "husky": "4.3.8",
    "inquirer-recursive": "0.0.7",
    "jest": "24.9.0",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "lodash": "4.17.20",
    "lodash.clonedeep": "4.5.0",
    "node-sass": "4.14.1",
    "polymer-build": "3.1.4",
    "polymer-webpack-loader": "2.0.3",
    "polymer-cli": "1.9.11",
    "es-dev-server": "1.60.2",
    "concurrently": "5.3.0",
    "prettier": "1.19.1",
    "raw-loader": "4.0.2",
    "react": "*",
    "react-dom": "*",
    "requirejs": "2.3.6",
    "rollup": "1.32.1",
    "rollup-plugin-babel": "4.4.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-delete": "1.2.0",
    "rollup-plugin-terser": "5.3.1",
    "strip-css-comments": "4.1.0",
    "symlink-dir": "4.1.0",
    "trim": "0.0.3",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2",
    "webpack": "4.46.0",
    "whatwg-fetch": "3.5.0",
    "yo": "3.1.1"
  },
  "dependencies": {
    "@lrnwebcomponents/deduping-fix": "2.7.7"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json}": [
        "prettier --write"
      ]
    },
    "ignore": [
      "elements/**/*.*.js",
      "**/analysis-error.json",
      "themes/**/*.*.js",
      "libraries/**/*.js"
    ]
  },
  "keywords": [
    "yeoman-generator",
    "custom-elements",
    "web-components",
    "webcomponents",
    "polymer",
    "lit-element",
    "skate-js",
    "slim-js",
    "twig",
    "lit-html",
    "vanillajs"
  ],
  "private": true,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*",
      "themes/*"
    ],
    "nohoist": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test-suite-inject > /dev/null && lint-staged"
    }
  }
}
